<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>

  </head>
  <body>
    <div class="bg-white py-7 sm:py-7">
      <div class="mx-auto max-w-7xl lg:px-8">
        <div class="max-w-2xl mx-auto lg:max-w-4xl">
          <div class="flex justify-between">
            <h2
              class="font-bold tracking-tight text-gray-900 text-1xl sm:text-2xl"
            >
              Order details
            </h2>
          
          </div>
         
          

          <div class="mt-7">
            <div class="px-4 sm:px-6 lg:px-8">
              <div class="sm:flex sm:items-center">
                <div class="sm:flex-auto">
                  <h1 class="text-base font-semibold leading-6 text-gray-900">
                    Items
                  </h1>
                </div>
              </div>
              <div class="flow-root mt-8 bg-red">
                <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                  <div
                    class="  py-2 align-middle sm:px-6 lg:px-8"
                  >
                    <table class=" divide-y divide-gray-300" style="width: 100px;" >
                      <thead>
                        <tr>
                          <th
                            scope="col"
                            class="py-3.5 w-10 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-0"
                          >
                            <small>Name</small>
                          </th>
                          <th
                            scope="col"
                            class="py-3.5 pl-4 text-center text-sm font-semibold text-gray-900 sm:pl-0"
                          >
                            <small>Product ID</small>
                          </th>
                          <th
                            scope="col"
                            class="px-1 py-3.5 text-center text-sm font-semibold text-gray-900"
                          >
                            <small>Price</small>
                          </th>
                          <th
                            scope="col"
                            class="px-1 py-3.5 text-center text-sm font-semibold text-gray-900"
                          >
                            <small>Quantity</small>
                          </th>
                          <th
                            scope="col"
                            class="px-1 py-3.5 text-center text-sm font-semibold text-gray-900"
                          >
                            <small>Subtotal</small>
                          </th>
                        
                        </tr>
                      </thead>
                      <tbody class="divide-y divide-gray-200">

                         {{#each order.items}}
                        <tr>
                        
                          <td
                            class="py-4 w-10 text-wrap pl-4 text-sm font-medium text-gray-900 whitespace-nowrap sm:pl-0
                                   w-full"
                          >
                           <small>{{name}}</small> 
                          </td>
                          <td
                            class="px-1 text-center py-4 text-sm text-gray-500 whitespace-nowrap w-full mx-3"
                          >
                           <small>{{productId}}</small>
                          </td>
                          <td
                            class="px-1 text-center py-4 text-sm text-gray-500 whitespace-nowrap w-full mx-3"
                          >
                            <small>{{price}}</small>
                          </td>
                          <td
                            class="px-1 text-center py-4 text-sm text-gray-500 whitespace-nowrap w-full mx-3"
                          >
                            <small>{{qty}}</small>
                          </td>
                          <td
                            class="px-1 text-center py-4 text-sm text-gray-500 whitespace-nowrap w-full"
                          >
                            <small>{{subTotal}}</small>
                          </td>
                         
                        </tr>

                        <!-- More people... -->
                      </tbody>
                      {{/each}}
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-5">
            <div
              class="grid mt-6 border-t border-gray-100 lg:grid-cols-2 sm:grid-cols-2"
            >
              <div>
                <div class="px-4 mt-3 sm:px-0">
                  <h3 class="text-base font-semibold leading-7 text-gray-900">
                    Address Information
                  </h3>
                  <p class="max-w-2xl mt-1 text-sm leading-6 text-gray-500">
                    <!-- Personal details about name a. -->
                  </p>
                </div>

                <dl
                  class="divide-y divide-gray-100"
                  
                >
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt class="text-sm font-medium leading-6 text-gray-900">
                      Street
                    </dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.address.street}}
                    </dd>
                  </div>
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt class="text-sm font-medium leading-6 text-gray-900">
                      Address line 2
                    </dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.address.addressLine2}}
                    </dd>
                  </div>
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt class="text-sm font-medium leading-6 text-gray-900">
                      City
                    </dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.address.city}}
                    </dd>
                  </div>
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt class="text-sm font-medium leading-6 text-gray-900">
                      State
                    </dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.address.state}}
                    </dd>
                  </div>
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt
                      class="text-sm font-medium leading-6 text-gray-900"
                    >PIN</dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.address.pin}}
                    </dd>
                  </div>
                </dl>
              </div>

              <div>
                <div class="px-4 mt-3 sm:px-0">
                  <h3 class="text-base font-semibold leading-7 text-gray-900">
                    Status
                  </h3>
                  <p class="max-w-2xl mt-1 text-sm leading-6 text-gray-500">
                    <!-- Personal details about name a. -->
                  </p>
                </div>
                <dl
                  class="divide-y divide-gray-100"
                  *ngIf="order?.address"
                >
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt class="text-sm font-medium leading-6 text-gray-900">
                      Delivery status
                    </dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.status}}
                    </dd>
                  </div>
                  <div
                    class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0"
                  >
                    <dt class="text-sm font-medium leading-6 text-gray-900">
                      Payment status
                    </dt>
                    <dd
                      class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"
                    >
                      {{order.paymentStatus}}

                    
                    </dd>
                  </div>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>